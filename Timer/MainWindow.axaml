<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
		Width="250" Height="150"
        x:Class="Timer.MainWindow"
        Title="Timer">

	 
	<Grid Grid.Row="1" Margin="50 0 0 0">
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			 
		</Grid.ColumnDefinitions>
		<TextBlock Grid.Column="0" Grid.Row="0" Text="25" Name="Minute" FontSize="55"></TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="0" Text=":" FontSize="55"></TextBlock>
		<TextBlock Grid.Column="2" Grid.Row="0" Text="00" Name="Seconds" FontSize="55"></TextBlock>
		 
		 <Button Click="Button_Click"  Height="50" Width="150" Grid.Row="1" Grid.ColumnSpan="3"  > 
			<TextBlock HorizontalAlignment="Center" FontFamily="Calibri" FontSize="30">Start</TextBlock>
		</Button>
	</Grid>
		 
	 
	 
</Window>
